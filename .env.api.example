# OnSpectAI API Configuration
# Copy this file to .env.api and fill in your values

# API Security
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
ONSPECTAI_API_KEY=your-secure-api-key-here

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-laravel-app.com

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
KWALITEITSZORG_MODEL=gemma3:27b

# Request timeout in seconds
REQUEST_TIMEOUT=120

# Logging
KWALITEITSZORG_LOG_LEVEL=INFO
